<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lrc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include layout="@layout/include_play_page_volume_bar" />-->

    <com.media.music.widget.LrcView
        android:id="@+id/lrc_view_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        lrc:lrcAnimationDuration="1000"
        lrc:lrcCurrentTextColor="@color/white"
        lrc:lrcDividerHeight="24dp"
        lrc:lrcNormalTextColor="@color/translucent_white"
        lrc:lrcTextSize="16sp" />
</LinearLayout>